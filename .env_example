# Set to true to use Qdrant vector DB, false for JSON
USE_DB=false

# Transport: stdio for local, sse for remote
TRANSPORT=sse

# For Qdrant (required if USE_DB=true)
QDRANT_URL=https://your-qdrant-cluster-url
QDRANT_API_KEY=your-api-key

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Authentication configuration
# Authentication type: JWT (production), STATIC_JWT (staging), STATIC_TOKEN (development), or none (no auth)
FASTMCP_SERVER_AUTH=none

# For JWT authentication (Production)
# JWKS endpoint URL for fetching public keys
FASTMCP_SERVER_AUTH_JWT_JWKS_URI=https://auth.yourcompany.com/.well-known/jwks.json
# Token issuer (e.g., your identity provider)
FASTMCP_SERVER_AUTH_JWT_ISSUER=https://auth.yourcompany.com
# Expected audience for tokens
FASTMCP_SERVER_AUTH_JWT_AUDIENCE=mcp-production-api
# Comma-separated list of required scopes
FASTMCP_SERVER_AUTH_JWT_REQUIRED_SCOPES=read:data,write:data

# For STATIC_JWT authentication (Staging)
# Static public key in PEM format for JWT verification
FASTMCP_SERVER_AUTH_JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\nMIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8AMIIBCgKCAQEA...\n-----END PUBLIC KEY-----
# Token issuer for static JWT
FASTMCP_SERVER_AUTH_JWT_ISSUER=https://auth.yourcompany.com
# Expected audience for static JWT
FASTMCP_SERVER_AUTH_JWT_AUDIENCE=mcp-staging-api
# Comma-separated list of required scopes for static JWT
FASTMCP_SERVER_AUTH_JWT_REQUIRED_SCOPES=read:data

# For STATIC_TOKEN authentication (Development)
# No additional variables needed; uses predefined tokens (e.g., dev-alice-token, dev-guest-token)